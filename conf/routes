# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application
GET        /                                controllers.Application.index
GET        /showQuestion                    controllers.Application.showQuestion(q: String, s:String)
GET        /showMTQuestion                  controllers.Application.showMTQuestion(q:String, s:String, assignmentId:String, hitId:String, turkSubmitTo:String ?="", workerId:String?="", target:String)
GET        /storeAnswer                     controllers.Application.storeAnswer

# Upload
GET        /upload                          controllers.Upload.upload
POST       /uploaded                        controllers.Upload.uploaded
GET        /test                            controllers.Upload.statTest

# Conference
GET        /conference-creator              controllers.Conference.conferenceCreator
POST       /conference-created              controllers.Conference.conferenceCreated
GET        /conference-editor/:id/:secret   controllers.Conference.conferenceEdit(id: Int, secret: String)
POST       /write-statterms                 controllers.Conference.writeMet2AssFile
POST       /save-conference-settings        controllers.Conference.saveConferenceSettings

# Paper
GET        /show-paper/:id/:secret          controllers.Paper.show(id: Int, secret: String)
GET        /confirm-paper/:id/:secret       controllers.Paper.confirmPaper(id: Int, secret: String)

# StatTerms
GET        /statterms                       controllers.StatTerms.showStatTerms
POST       /statterms/add-method            controllers.StatTerms.addMethod
POST       /statterms/edit-method           controllers.StatTerms.editMethod
POST       /statterms/add-assumption        controllers.StatTerms.addAssumption
POST       /statterms/edit-assumption       controllers.StatTerms.editAssumption
GET        /methods2assumptions             controllers.StatTerms.method2assumptions
POST       /methods2assumptions/add         controllers.StatTerms.addMethod2assumptions
POST       /methods2assumptions/edit        controllers.StatTerms.editMethod2assumptions

# Footer
GET        /faq                             controllers.Footer.faq
GET        /about                           controllers.Footer.about
GET        /impressum                       controllers.Footer.impressum

# Login
GET        /login                           controllers.Login.login
GET        /logout                          controllers.Login.logout

GET        /assetsBallot/:id/:secret        controllers.Application.showAsset(id: Long, secret:String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                    controllers.Assets.at(path="/public", file)

    